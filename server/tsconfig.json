{
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "./dist",

        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"]
}
